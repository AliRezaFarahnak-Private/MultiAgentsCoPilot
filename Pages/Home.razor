@page "/"

<PageTitle>Home</PageTitle>

<h1>Chat Application</h1>

<RadzenCard Style="max-width: 600px; margin: auto;">
    <div style="height: 400px; overflow-y: auto; border: 1px solid #ccc; padding: 10px;">
        @foreach (var message in messages)
        {
            <div style="margin-bottom: 10px;">
                <strong>@message.User:</strong> @message.Text
            </div>
        }
    </div>
    <div style="margin-top: 10px;">
        <RadzenTextBox @bind-Value="newMessage" Placeholder="Type your message..." Style="width: 80%;" />
        <RadzenButton Click="@SendMessage" Text="Send" Style="width: 18%; margin-left: 2%;" />
    </div>
</RadzenCard>

@code {
    private List<Message> messages = new List<Message>();
    private string newMessage;

    void SendMessage()
    {
        if (!string.IsNullOrWhiteSpace(newMessage))
        {
            messages.Add(new Message { User = "You", Text = newMessage });
            // Simulate AI reply
            messages.Add(new Message { User = "AI", Text = newMessage });
            newMessage = string.Empty;
        }
    }

    class Message
    {
        public string User { get; set; }
        public string Text { get; set; }
    }
}